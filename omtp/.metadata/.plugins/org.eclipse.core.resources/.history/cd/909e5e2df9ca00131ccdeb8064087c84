#ifndef MOBILENODE_H_
#define MOBILENODE_H_

#include <omnetpp.h>
#include <string>
#include <vector>
#include "BindingUpdate.h"

#define HN 0 // home network
#define FN 1 // foreign network
#define NN 2 // no network

class MobileNode {
    int state;
    std::string ipaddress;
    std::vector<BindingUpdate> BU_list;
public:
    MobileNode();
    virtual ~MobileNode();
};

#endif /* MOBILENODE_H_ */
