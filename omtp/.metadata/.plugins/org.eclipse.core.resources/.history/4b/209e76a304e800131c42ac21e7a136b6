#include <omnetpp.h>
#include <string.h>
#include <stdio.h>
#include "hamn_m.h"

class HomeAgent : public cSimpleModule {
public:
    HomeAgent();
    virtual ~HomeAgent();
    void handleMessage(cMessage *msg);
 };

Define_Module(HomeAgent);

HomeAgent::HomeAgent()
{

}

HomeAgent::~HomeAgent()
{

}

void HomeAgent::handleMessage(cMessage *msg)
{
    Hamn *hmsg = check_and_cast<Hamn *>(msg);
    hmsg->setLifetime(7);
    send(hmsg,"out");
}
